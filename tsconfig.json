{
  "compilerOptions": {
    "target": "es2019",
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}